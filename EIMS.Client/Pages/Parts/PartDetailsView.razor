@using EIMS.Shared.Models

<div class="bg-base-200 p-6 rounded-lg max-w-4xl">
    <div class="flex flex-col md:flex-row gap-6 mb-6">
        <div class="md:w-1/3 flex justify-center">
            <div style="width: 180px; height: 180px; background-color: #333; display: flex; justify-content: center; align-items: center; border-radius: 6px; overflow: hidden; position: relative;">
                <img src="@Part.ImageUrl" alt="@Part.Mpn" style="position: absolute; max-width: 90%; max-height: 90%; object-fit: contain;" onerror="this.onerror=null; this.src='data:image/png;base64,';" />
            </div>
        </div>
        <div class="md:w-2/3">
            <h2 class="text-2xl font-bold">@Part.Mpn</h2>
            <p class="text-lg font-semibold text-primary">@Part.Manufacturer</p>
            <p class="text-sm mt-2">@Part.Description</p>
            <p class="text-sm mt-2">Category: <span class="font-semibold">@Part.Category</span></p>
            
            @if (!string.IsNullOrEmpty(Part.DatasheetUrl))
            {
                <div class="mt-4">
                    <a href="@Part.DatasheetUrl" target="_blank" class="btn btn-sm btn-primary">
                        <span class="material-icons mr-1">description</span>
                        View Datasheet
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        @if (Part.Specs != null)
        {
            @if (Part.Specs.TryGetValue("Dimensions", out var dimensions))
            {
                <div class="card bg-base-100 shadow-md">
                    <div class="card-body p-4">
                        <h3 class="card-title text-lg">Dimensions</h3>
                        <table class="w-full table-auto">
                            <tbody>
                                @foreach (var spec in dimensions)
                                {
                                    <tr class="border-b border-base-300">
                                        <td class="py-2 text-left text-sm">@spec.Key</td>
                                        <td class="py-2 text-right font-medium">@spec.Value</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            @if (Part.Specs.TryGetValue("Technical", out var technical))
            {
                <div class="card bg-base-100 shadow-md">
                    <div class="card-body p-4">
                        <h3 class="card-title text-lg">Technical</h3>
                        <table class="w-full table-auto">
                            <tbody>
                                @foreach (var spec in technical)
                                {
                                    <tr class="border-b border-base-300">
                                        <td class="py-2 text-left text-sm">@spec.Key</td>
                                        <td class="py-2 text-right font-medium">@spec.Value</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            @if (Part.Specs.TryGetValue("Physical", out var physical))
            {
                <div class="card bg-base-100 shadow-md">
                    <div class="card-body p-4">
                        <h3 class="card-title text-lg">Physical</h3>
                        <table class="w-full table-auto">
                            <tbody>
                                @foreach (var spec in physical)
                                {
                                    <tr class="border-b border-base-300">
                                        <td class="py-2 text-left text-sm">@spec.Key</td>
                                        <td class="py-2 text-right font-medium">@spec.Value</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            @if (Part.Specs.TryGetValue("Other", out var other))
            {
                <div class="card bg-base-100 shadow-md">
                    <div class="card-body p-4">
                        <h3 class="card-title text-lg">Other Specifications</h3>
                        <table class="w-full table-auto">
                            <tbody>
                                @foreach (var spec in other)
                                {
                                    <tr class="border-b border-base-300">
                                        <td class="py-2 text-left text-sm">@spec.Key</td>
                                        <td class="py-2 text-right font-medium">@spec.Value</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    [Parameter]
    public OctopartSearchResult Part { get; set; } = new();
} 